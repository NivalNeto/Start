#include <stdio.h>
#include <conio.h>
#include <locale.h>

int main(){
	
	setlocale(LC_ALL, "Portuguese");
	int i = 0;

	do {
		printf(" Digite 1 para saber se um número é par ou impar\n\n Digite 2\n\n Digite 3\n\n Digite 4\n\n Digite 5\n\n Digite 6\n \n e Digite 0 para sair\n\nDigite Aqui  ");
		scanf("%d", &i);
	
	switch(i){
	
		case 1:
			printf("\n\nDigite um número para saber se um número é par ou impar\n\n");
				scanf("%d", &i);
			if(i % 2 == 0){
					printf("%d é par\n\n", i);
					
			}else{
				printf("%d é impar\n\n", i);		
			}		
			break;
		
		case 2:
			printf("Número 2\n");
			break;
		
		case 3:
			printf("Número 3\n");
		break;
		
		case 4:
			printf("Número 4\n");
		break;
		
		case 5:
			printf("Número 5\n");
		break;
		
		case 6:
			printf("Número 6\n");
		break;
		
		case 7:
			printf("Número 7\n");
		break;
		
		case 8:
			printf("Numero 8\n");
		break;
		
		case 9:
			printf("Numero 9\n");
		break;
	}
	
	}while (i != 0);
	
	getch();
	
}
